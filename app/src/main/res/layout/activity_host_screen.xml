          app:layout_constraintTop_toBottomOf="@+id/first_line_constraint_layout">

        <TextView
            android:id="@+id/middle_line_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start"
            android:text="@string/middle_line"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/middle_line_price_value_edittext"
